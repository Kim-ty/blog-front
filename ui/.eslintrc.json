{
  "root": true,
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint", "prettier"],
  "extends": ["airbnb", "plugin:@typescript-eslint/recommended", "airbnb/hooks", "prettier"],
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".ts", ".tsx", ".js", ".jsx"]
      }
    }
  },
  "globals": {
    "JSX": true,
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "rules": {
    "no-var": "error",
    "camelcase": ["error", { "properties": "never" }],
    "no-unused-vars": "warn",
    "no-new-wrappers": "error",
    "quotes": ["error", "single", { "avoidEscape": true }],
    "semi": ["error", "always"],
    "semi-spacing": ["error", { "before": false, "after": true }],
    "comma-style": ["error", "last"],
    "comma-spacing": ["error", { "before": false, "after": true }],
    "key-spacing": ["error", { "beforeColon": false, "afterColon": true }],
    "no-multiple-empty-lines": 0,
    "keyword-spacing": [
      "error",
      {
        "before": true,
        "after": true,
        "overrides": {
          "return": { "after": true },
          "throw": { "after": true },
          "case": { "after": true }
        }
      }
    ],
    "indent": ["error", 2],
    "react/jsx-filename-extension": [1, { "extensions": [".ts", ".tsx"] }],
    "import/no-unresolved": 0,
    "linebreak-style": [0, "windows"],
    "import/extensions": [2, "ignorePackages", { "ts": "never", "tsx": "never" }],
    "default-case": 0,
    "dot-notation": 0,
    "no-param-reassign": 0,
    "no-console": 0,
    "react/prop-types": 0,
    "@typescript-eslint/camelcase": 0,
    "@typescript-eslint/class-name-casing": 0,
    "@typescript-eslint/explicit-function-return-type": 0,
    "jsx-a11y/no-static-element-interactions": 0,
    "jsx-a11y/click-events-have-key-events": 0,
    "jsx-a11y/no-noninteractive-element-interactions": 0,

    "jsx-a11y/control-has-associated-label": [
      2,
      {
        "labelAttributes": ["label"],
        "controlComponents": ["CustomComponent"],
        "ignoreElements": ["audio", "canvas", "embed", "input", "textarea", "tr", "video", "button"],
        "ignoreRoles": [
          "grid",
          "listbox",
          "menu",
          "menubar",
          "radiogroup",
          "row",
          "tablist",
          "toolbar",
          "tree",
          "treegrid"
        ],
        "depth": 3
      }
    ],
    "no-underscore-dangle": ["error", { "allow": ["_children", "_content"] }],
    "react/jsx-props-no-spreading": 0,
    "no-restricted-syntax": ["error", "WithStatement", "BinaryExpression[operator='in']"],
    "react/jsx-wrap-multilines": [
      "error",
      {
        "declaration": "parens-new-line",
        "assignment": "parens-new-line",
        "return": "parens-new-line",
        "arrow": "parens-new-line",
        "condition": "parens-new-line",
        "logical": "ignore",
        "prop": "ignore"
      }
    ],
    "no-unused-expressions": [2, { "allowShortCircuit": false, "allowTernary": true }],
    "no-shadow": 0,
    "import/prefer-default-export": 0,
    "import/no-extraneous-dependencies": 0,
    "react/jsx-curly-newline": 0,
    "@typescript-eslint/no-namespace": 0,
    "react/jsx-one-expression-per-line": 0,
    "lines-between-class-members": ["error", "always", { "exceptAfterSingleLine": true }],
    "jsx-a11y/label-has-associated-control": 0,
    "react/no-array-index-key": 0,
    "react/function-component-definition": 0,
    "arrow-body-style": 0
  }
}
